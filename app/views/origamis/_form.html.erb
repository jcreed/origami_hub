<%= semantic_form_for @origami do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :name, :hint => "Enter the origami artworks's name" %>
    <%= f.input :artist, :hint => "Enter the origami artist's name" %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :label => "Create Origami", :class => "btn btn-small" %>
  <% end %>
<% end %>
